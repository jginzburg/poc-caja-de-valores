kind: Deployment
apiVersion: apps/v1
metadata:
  name: terminal-{{ item }}
  labels:
    app: terminal-{{ item }}
    app.kubernetes.io/component: terminal-{{ item }}
    app.kubernetes.io/instance: terminal-{{ item }}
    app.kubernetes.io/name: terminal-{{ item }}
    app.kubernetes.io/version: 1.0.0-SNAPSHOT
    app.openshift.io/runtime: quarkus
spec:
  replicas: 1
  selector:
    matchLabels:
      deployment: terminal-{{ item }}
  template:
    metadata:
      creationTimestamp: null
      labels:
        deployment: terminal-{{ item }}
    spec:
      volumes:
        - name: application-config
          configMap:
            name: terminal-{{ item }}
            items:
              - key: application.properties
                path: application.properties
            defaultMode: 420
      containers:
        - name: terminal-{{ item }}
          image: fix-iniciator:latest
          ports:
            - containerPort: 8080
              protocol: TCP
          env:
            - name: JAVA_OPTS_APPEND
              value: '-XX:MaxMetaspaceSize=1000m'
          resources:
            limits:
              cpu: '1'
              memory: 2Gi
            requests:
              memory: 256Mi
          volumeMounts:
            - name: application-config
              readOnly: true
              mountPath: /deployments/config
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          imagePullPolicy: IfNotPresent
      restartPolicy: Always
      terminationGracePeriodSeconds: 30
      dnsPolicy: ClusterFirst
      securityContext: {}
      schedulerName: default-scheduler
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 25%
      maxSurge: 25%
  revisionHistoryLimit: 10
  progressDeadlineSeconds: 600
